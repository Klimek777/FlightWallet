<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FlightWallet.ViewModels"
             xmlns:models="clr-namespace:FlightWallet.Models"
             x:DataType="vm:FlightsViewModel"
             x:Class="FlightWallet.Views.AddPage"
             Title="AddPage">
   
    <VerticalStackLayout>
        <Entry Placeholder="Flight From Name"
               Text="{Binding OperatingFlight.FlightFromName, Mode=TwoWay}" />
        <Entry Placeholder="Flight To Name"
               Text="{Binding OperatingFlight.FlightToName, Mode=TwoWay}" />
        <Entry Placeholder="Price"
               Keyboard="Numeric"
               Text="{Binding OperatingFlight.Price, Mode=TwoWay}" />
        <DatePicker Date="{Binding OperatingFlight.DepartureDate}" />
        <Button Text="Add Flight"
                HorizontalOptions="Center"
VerticalOptions="End"
Margin="0,10,0,20"
                Command="{Binding SaveFlightCommand}" />
    </VerticalStackLayout>
</ContentPage>
